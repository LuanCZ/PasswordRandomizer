<Window x:Class="PasswordRandomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordRandomizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="351" Width="735" Background="#FF453DEC">
    <Grid>
        <Label x:Name="label" Content="Password Randomizer" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="76" Width="561" FontSize="48" FontFamily="Doppio One" FontWeight="Bold" FontStyle="Normal"/>
        <Button x:Name="btnGenererMdp" Content="Générer le mot de passe" HorizontalAlignment="Left" Margin="425,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.029,-0.481" Height="50" Width="283" FontSize="24" FontFamily="Doppio One" BorderBrush="Black" Background="#FF2689F3" Click="btnGenererMdp_Click"/>
        <TextBox x:Name="txtMdp" HorizontalAlignment="Left" Margin="22,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Height="214" FontFamily="Doppio One" Background="#FF0C98F9" FontSize="16">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="#FFABADB3" Opacity="0"/>
            </TextBox.BorderBrush>
        </TextBox>

    </Grid>
</Window>
